{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // ESM support for modern Node
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2021",

    // Node.js types
    "types": ["node"],

    // Strictness
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Modern tooling
    "isolatedModules": true
  },
  "include": ["src"]
}
